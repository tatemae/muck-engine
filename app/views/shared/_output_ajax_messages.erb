<%
html = output_errors(title, options, fields, flash_only)
return if html.blank?
html = escape_javascript(html)
if decode_html
  html = "decodeHtml('#{html}')"
else
  html = "'#{html}'"
end
-%>
<% if growl -%>
  jQuery.jGrowl.info(<%=html.html_safe%>);
<% else -%>
  jQuery('#<%=dom_id%>').html(<%=html.html_safe%>);
  jQuery('#<%=dom_id%>').show();
<% end -%>